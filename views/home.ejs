<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">  
    <style>
        .myborder{
            border: 2px solid black;
            margin-top: 20px;
        }
        input{
            background-color: rgb(255, 0, 0);
            color: white;
            border-radius: 10px;
        }
        h1{
            padding-top: 20px;
            padding-bottom: 20px;
            border-bottom: 2px solid rgb(0, 0, 0);
        }
        table{
            margin-top: 20px;
        }
       
    </style>
</head>
<body>
    <header>
        <h1 class="text-center">Apartment Management</h1>
    </header>
  <!-- table for tenant -->
   <div class="container">
    <div class="row">
   
<!-- table for owner -->
   <table class="col-5 myborder text-center m-2">
    <tr class="">
        <th>Owner Name</th>
        <th>ApartMent Number</th>
    </tr>
    <% task2.forEach((t) => {  %>
    <tr class="myborder">
        <th><%= t.ownerName %></th>
        <th><%= t.ownerNumber%></th>
    </tr>
    <%  }); %>

   </table>
   <form action="/owner">
    <input type="submit" value="Add owner Info">
</form>

   <table class="col-5 myborder text-center m-2">
    <tr>
        <th>Tenant Name</th>
        <th>ApartMent Number</th>
    </tr>
    <% tasks.forEach((e) => {  %>
    <tr class="myborder">
        <th><%= e.tenantName %></th>
        <th><%= e.tenantNumber%></th>
    </tr>
    <%  }); %>
   </table>
   <form action="/tenant">
    <input type="submit" value="Add tenant Info">
</form>

</div>



</div>
</body>
</html>